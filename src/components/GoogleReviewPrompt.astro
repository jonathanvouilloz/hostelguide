---
import { getSettings } from '../lib/content';

const settings = await getSettings();
const hasReviewUrl = Boolean(settings.googleReviewUrl);
---

{hasReviewUrl && (
  <div id="review-prompt-overlay" class="review-overlay hidden">
    <div class="review-modal">
      <div class="review-content">
        <div class="review-icon">
          <span class="material-symbols-outlined filled">star</span>
        </div>

        <h2 class="review-title">It's your last day!</h2>

        <p class="review-description">
          We hope you enjoyed your stay. Would you mind leaving us a review?
        </p>

        <div class="review-actions">
          <a
            href={settings.googleReviewUrl}
            target="_blank"
            rel="noopener noreferrer"
            id="review-btn"
            class="review-btn-primary"
          >
            <span class="material-symbols-outlined">rate_review</span>
            Leave a Review
          </a>

          <button id="review-dismiss-btn" class="review-btn-secondary">
            Maybe later
          </button>
        </div>
      </div>
    </div>
  </div>
)}

<style>
  .review-overlay {
    position: fixed;
    inset: 0;
    z-index: 150;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .review-overlay.hidden {
    display: none;
  }

  .review-modal {
    width: 100%;
    max-width: 340px;
    background-color: var(--color-surface);
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-border-light);
    padding: 2rem 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    animation: slideUp 0.3s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .review-content {
    text-align: center;
  }

  .review-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin: 0 auto 1.25rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%);
  }

  .review-icon .material-symbols-outlined {
    font-size: 32px;
    color: white;
  }

  .review-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .review-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .review-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .review-btn-primary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.875rem 1rem;
    border-radius: var(--radius-lg);
    background-color: var(--color-primary);
    color: var(--color-bg);
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: background-color 0.2s;
    border: none;
    cursor: pointer;
  }

  .review-btn-primary:hover {
    background-color: var(--color-primary-dark);
  }

  .review-btn-primary .material-symbols-outlined {
    font-size: 20px;
  }

  .review-btn-secondary {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color 0.2s;
  }

  .review-btn-secondary:hover {
    color: var(--color-text);
  }
</style>

<script>
  import {
    shouldShowReviewPrompt,
    markReviewPromptShown,
    hasSeenOnboarding,
  } from '../lib/guestData';

  const overlay = document.getElementById('review-prompt-overlay');
  const reviewBtn = document.getElementById('review-btn');
  const dismissBtn = document.getElementById('review-dismiss-btn');

  function initReviewPrompt() {
    // Only show if onboarding was completed
    if (!hasSeenOnboarding()) return;

    // Only show if it's after checkout date and not already shown
    if (!shouldShowReviewPrompt()) return;

    overlay?.classList.remove('hidden');
  }

  function closePrompt() {
    markReviewPromptShown();
    overlay?.classList.add('hidden');
  }

  // Event listeners
  reviewBtn?.addEventListener('click', () => {
    closePrompt();
  });

  dismissBtn?.addEventListener('click', () => {
    closePrompt();
  });

  // Close on overlay click (outside modal)
  overlay?.addEventListener('click', (e) => {
    if (e.target === overlay) {
      closePrompt();
    }
  });

  // Initialize with delay to not interfere with other modals
  setTimeout(initReviewPrompt, 2000);
</script>
