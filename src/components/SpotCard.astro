---
import type { Spot } from '../lib/types';

interface Props {
  spot: Spot;
  showCuisine?: boolean;
}

const { spot, showCuisine = false } = Astro.props;

function capitalize(str: string): string {
  return str.charAt(0).toUpperCase() + str.slice(1).replace('-', ' ');
}
---

<a href={`/spot/${spot.id}`} class="spot-card card touch-target block transition-all">
  <div class="image-container">
    {spot.image ? (
      <img
        src={spot.image}
        alt={spot.name}
        class="spot-image"
        loading="lazy"
      />
    ) : (
      <div class="placeholder" aria-hidden="true">
        <span>No image</span>
      </div>
    )}
  </div>

  <div class="content p-3">
    <div class="header flex items-center justify-between gap-2">
      <h3 class="name font-medium text-base">{spot.name}</h3>
      <span class="price badge" aria-label={`Price: ${spot.priceRange}`}>
        {spot.priceRange}
      </span>
    </div>

    {showCuisine && spot.cuisineType && (
      <span class="cuisine badge badge-secondary mt-1">
        {capitalize(spot.cuisineType)}
      </span>
    )}

    <p class="description text-sm text-muted mt-2">
      {spot.description}
    </p>
  </div>
</a>

<style>
  .spot-card {
    text-decoration: none;
    color: inherit;
    overflow: hidden;
  }

  .spot-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .spot-card:active {
    transform: translateY(0);
  }

  .image-container {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #f3f4f6;
  }

  .spot-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
  }

  .badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    background-color: var(--color-primary);
    color: white;
    flex-shrink: 0;
  }

  .badge-secondary {
    background-color: #e5e7eb;
    color: #374151;
  }

  .description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }
</style>
